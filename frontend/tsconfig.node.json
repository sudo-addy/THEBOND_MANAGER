    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
